@keyframes glow {
    0% {
		border-color: #393;
		box-shadow: 0 0 10rpx rgba(0,255,0,.2), inset 0 0 10rpx rgba(0,255,0,.1), 0 4rpx 0 #eee;
    }	
    100% {
		border-color: #6f6;
		box-shadow: 0 0 40rpx rgba(0,255,0,.6), inset 0 0 20rpx rgba(0,255,0,.4), 0 0 0 #eee;
    }
}
.inputfocus{
  animation: glow 800ms ease-out infinite alternate;
  outline: none;
}
