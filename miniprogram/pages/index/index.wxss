.loginBox{
  height: 100vh;
  overflow: hidden;
}
.login-body{
  width:339vw;
  height: 100%;
  overflow-y: hidden;
  /* position: relative; */
}
.linear{
  transition: all 2s linear;
}
.snow-container{
  height: 108px;
  position: absolute;
  top:0;
  left: 0;
}
.owl-login {
  width: 422rpx;
  height: 216rpx;
  position: absolute;
  top: 200rpx;
  left: 168rpx;
  z-index: 3;
}
.owl-login .hand {
  width: 68rpx;
  height:78rpx;
  border-radius: 80rpx;
  background-color: #472d20;
  transform: scaleY(0.6);
  transition: 0.3s ease-out;
  position: absolute;
  left: 28rpx;
  bottom: -16rpx;
  z-index: 2;
}
.owl-login .hand.hand-r {
  left: 340rpx;
}
.owl-login.password .hand {
  transform: translateX(84rpx) translateY(-30rpx) scale(0.6);
}
.owl-login.password .hand.hand-r {
  transform: translateX(-84rpx) translateY(-30rpx) scale(0.6);
}
.owl-login .arms {
  top: 116rpx;
  position: absolute;
  width: 100%;
  height: 82rpx;
  overflow: hidden;
}
.owl-login .arms .arm {
  width: 80rpx;
  height: 264rpx;
  position: absolute;
  left: 40rpx;
  top: 80rpx;
  transition: 0.3s ease-out;
  transform: rotate(-20deg);
  z-index: 4;
}
@media all and (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 1.5/1), (min-device-pixel-ratio: 1.5), (min-resolution: 138dpi), (min-resolution: 1.5dppx) {
.owl-login .arms .arm {
    background-size: 80rpx 130rpx;
  }
}

.owl-login .arms .arm.arm-r {
  left: 316rpx;
}
.owl-login.password .arms .arm{
  transform: translateY(-80rpx) translateX(80rpx);
}
.owl-login.password .arms .arm.arm-r {
  transform: translateY(-80rpx) translateX(-80rpx) scaleX(-1);
}
.login-box{
  width: 120rpx;
  height: 100rpx;
  border: 1px solid;
}
